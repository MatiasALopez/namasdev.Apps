@using namasdev.Apps.Entidades.Metadata;
@model namasdev.Apps.Web.Portal.ViewModels.EntidadesChecks.EntidadCheckViewModel
@{
    ViewBag.Title = $"{Model.PaginaModo} {EntidadCheckMetadata.NOMBRE}";
    ViewBag.ExcluirHeaderYFooter = true;

    var controlesIds = new
    {
        Form = $"frm{EntidadCheckMetadata.NOMBRE}",
    };
}
<form id="@controlesIds.Form" action="@Url.Action()" method="post" class="mx-2">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(excludePropertyErrors: true)
    @Html.Partial("_Errores")
    @Html.Partial("_ResultadoOk")
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.PaginaModo)
    @Html.HiddenFor(m => m.AplicacionVersionId)
    @Html.HiddenFor(m => m.EntidadId)
    @Html.HiddenFor(m => m.EntidadTablaNombre)
    <div class="form-row">
        <div class="form-group col-12">
            @Html.LabelFor(m => m.Nombre, new { @class = "requerido" })
            @Html.TextBoxFor(m => m.Nombre, new { @maxlength = EntidadCheckMetadata.Propiedades.Nombre.TAMAÑO_MAX, @class = "form-control form-control-required" })
            @Html.ValidationMessageFor(m => m.Nombre)
        </div>
        <div class="form-group col-12">
            @Html.LabelFor(m => m.Expresion, new { @class = "requerido" })
            @Html.TextBoxFor(m => m.Expresion, new { @maxlength = EntidadCheckMetadata.Propiedades.ExpresionNombre.TAMAÑO_MAX, @class = "form-control form-control-required" })
            @Html.ValidationMessageFor(m => m.Expresion)
        </div>
    </div>
    <button type="submit" class="btn btn-primary" data-toggle-state-container="#@controlesIds.Form">Guardar</button>
</form>
@section bodyScripts {
    <script type="text/javascript">
        $(function () {
            namasdevApps.setActiveMenuOption('entidadesChecks');
        });
    </script>
}
