@using namasdev.Apps.Entidades.Metadata;
@model namasdev.Apps.Web.Portal.ViewModels.EntidadesPropiedades.EntidadPropiedadViewModel
<div class="form-row">
    <div class="form-group col-6">
        @Html.LabelFor(m => m.EspecificacionesDecimal.DigitosEnteros, new { @class = "requerido" })
        @Html.TextBoxFor(m => m.EspecificacionesDecimal.DigitosEnteros, new { @class = "form-control inputmask-integer", maxlength = PropiedadTipoEspecificacionesDecimalMetadata.Propiedades.DigitosEnteros.TAMAÑO_MAX })
        @Html.ValidationMessageFor(m => m.EspecificacionesDecimal.DigitosEnteros)
    </div>
    <div class="form-group col-6">
        @Html.LabelFor(m => m.EspecificacionesDecimal.DigitosDecimales, new { @class = "requerido" })
        @Html.TextBoxFor(m => m.EspecificacionesDecimal.DigitosDecimales, new { @class = "form-control inputmask-integer", maxlength = PropiedadTipoEspecificacionesDecimalMetadata.Propiedades.DigitosDecimales.TAMAÑO_MAX })
        @Html.ValidationMessageFor(m => m.EspecificacionesDecimal.DigitosDecimales)
    </div>
    <div class="form-group col-6">
        @Html.LabelFor(m => m.EspecificacionesDecimal.ValorMinimo)
        @Html.TextBoxFor(m => m.EspecificacionesDecimal.ValorMinimo, new { @class = "form-control inputmask-numeric", data_inputmask_digits = 10, maxlength = PropiedadTipoEspecificacionesDecimalMetadata.Propiedades.ValorMinimo.TAMAÑO_MAX })
        @Html.ValidationMessageFor(m => m.EspecificacionesDecimal.ValorMinimo)
    </div>
    <div class="form-group col-6">
        @Html.LabelFor(m => m.EspecificacionesDecimal.ValorMaximo)
        @Html.TextBoxFor(m => m.EspecificacionesDecimal.ValorMaximo, new { @class = "form-control inputmask-numeric", data_inputmask_digits = 10, maxlength = PropiedadTipoEspecificacionesDecimalMetadata.Propiedades.ValorMaximo.TAMAÑO_MAX })
        @Html.ValidationMessageFor(m => m.EspecificacionesDecimal.ValorMaximo)
    </div>
</div>