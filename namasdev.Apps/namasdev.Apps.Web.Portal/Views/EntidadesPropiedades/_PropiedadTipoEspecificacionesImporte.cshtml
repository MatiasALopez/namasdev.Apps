    </div>
    <div class="form-group col-6">
        @Html.LabelFor(m => m.EspecificacionesImporte.ValorMaximo)
        @Html.TextBoxFor(m => m.EspecificacionesImporte.ValorMaximo, new { @class = "form-control inputmask-numeric", maxlength = PropiedadTipoEspecificacionesImporteMetadata.Propiedades.ValorMaximo.TAMAÑO_MAX })
        @Html.ValidationMessageFor(m => m.EspecificacionesImporte.ValorMaximo)
    </div>
</div>