@using namasdev.Apps.Entidades.Metadata;
@model namasdev.Apps.Web.Portal.ViewModels.EntidadesPropiedades.EntidadPropiedadViewModel
<div class="form-row">
    <div class="form-group col-6">
        @Html.LabelFor(m => m.EspecificacionesImporte.ValorMinimo)
        @Html.TextBoxFor(m => m.EspecificacionesImporte.ValorMinimo, new { @class = "form-control inputmask-numeric", maxlength = PropiedadTipoEspecificacionesImporteMetadata.Propiedades.ValorMinimo.TAMAÑO_MAX })
