@model namasdev.Apps.Entidades.Entidad
@{
    var namespaces = new
    {
        Aplicacion = Model.AplicacionVersion.Aplicacion.Nombre
    };

    var clases = new
    {
        ClaseBase =
            Model.PropiedadesDefault.IDPropiedadTipoId.HasValue
            ? string.Format("ParametrosEntidadBase<{0}>", Model.PropiedadesDefault.IDTipo.CLRType)
            : string.Format("ParametrosConUsuarioBase"),
    };
}
using System;
using @(namespaces.Aplicacion).Entidades;

namespace @(namespaces.Aplicacion).Negocio.DTO.@(Model.NombrePlural)
{
    public class AgregarParametros : @clases.ClaseBase
    {
    @foreach (var p in Model.Propiedades)
    {
        if (!p.Editable || p.EsAuditoria() || p.EsCalculada)
        {
            continue;
        }
        <text>public @(p.PermiteNull ? p.Tipo.CLRTypeNullable : p.Tipo.CLRType) @p.NombreOId { get; set; }</text>
    }
    }
}
