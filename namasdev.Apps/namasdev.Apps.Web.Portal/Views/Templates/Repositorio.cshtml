@model namasdev.Apps.Entidades.Entidad
@{
    var namespaces = new
    {
        Aplicacion = Model.AplicacionVersion.Aplicacion.Nombre,
        Datos = $"{Model.AplicacionVersion.Aplicacion.Nombre}.Datos",
    };
    var clases = new
    {
        Repositorio = $"{Model.NombrePlural}Repositorio"
    };
    var interfaces = new 
    {
        Repositorio = $"I{clases.Repositorio}"
    };

    string claveTipo = Model.PropiedadesDefault?.IDTipo?.CLRType,
        tiposGenericosEntidadYId = $"{Model.Nombre}, {claveTipo}";

    bool usarRepositorioBase = !string.IsNullOrWhiteSpace(claveTipo);
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Datos.Repositorio</title>
</head>
<body>
<pre><code>
using System;
using System.Collections.Generic;
using System.Linq;

using namasdev.Core.Types;
using namasdev.Data;
using namasdev.Data.Entity;
using @(namespaces.Aplicacion).Entidades;
using @(namespaces.Datos).Sql;

namespace @(namespaces.Datos)
{
    public interface @interfaces.Repositorio @(usarRepositorioBase ? $": IRepositorio<{@tiposGenericosEntidadYId}>" : "")
    {
    }

    public class @clases.Repositorio : @(usarRepositorioBase ? $"Repositorio<SqlContext, {tiposGenericosEntidadYId}>, " : "")@interfaces.Repositorio
    {
    }
}
</code></pre>
</body>
</html>
