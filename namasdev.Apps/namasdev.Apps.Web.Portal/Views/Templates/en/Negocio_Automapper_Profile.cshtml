@using namasdev.Apps.Entidades.Valores;
@using namasdev.Apps.Web.Portal.Helpers;
@model namasdev.Apps.Entidades.Entidad
@{
    var namespaces = new
    {
        Aplicacion = Model.AplicacionVersion.Aplicacion.Nombre
    };
    var clases = new
    {
        Profile = string.Format("{0}Profile", Model.Nombre),
        Entidad = Model.Nombre,
    };
}
using AutoMapper;

using @(Html.Raw(namespaces.Aplicacion)).Entities;
using @(Html.Raw(namespaces.Aplicacion)).Business.DTO.@(Html.Raw(Model.NombrePlural));

namespace @(Html.Raw(namespaces.Aplicacion)).Business.Automapper
{
    public class @Html.Raw(clases.Profile) : Profile
    {
        public @(Html.Raw(clases.Profile))()
        {
            @(Html.Raw(FormatoHelper.Generic("CreateMap", "AddParameters", clases.Entidad)))();
            @(Html.Raw(FormatoHelper.Generic("CreateMap", "UpdateParameters", clases.Entidad)))();
        @if (Model.Especificaciones.BajaTipoId == BajaTipos.LOGICA)
        {
            <text>@(Html.Raw(FormatoHelper.Generic("CreateMap", "SetAsDeletedParameters", clases.Entidad)))();
            @(Html.Raw(FormatoHelper.Generic("CreateMap", "UnsetAsDeletedParameters", clases.Entidad)))();</text>
        }
        else if (Model.Especificaciones.BajaTipoId == BajaTipos.FISICA)
        {
            <text>@(Html.Raw(FormatoHelper.Generic("CreateMap", "DeleteParameters", clases.Entidad)))();</text>
        }
        }
    }
}
