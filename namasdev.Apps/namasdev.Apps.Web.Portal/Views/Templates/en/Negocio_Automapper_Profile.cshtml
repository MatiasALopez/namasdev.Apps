@using namasdev.Apps.Entidades.Valores;
@using namasdev.Apps.Web.Portal.Helpers;
@model namasdev.Apps.Entidades.Entidad
@{
    var idiomaTextos = Model.AplicacionVersion.Aplicacion.Idioma.Textos.Idioma.Textos;
    var namespaces = new
    {
        Aplicacion = Model.AplicacionVersion.Aplicacion.Nombre,
        Entidades = idiomaTextos.EntidadesNombre,
        Negocio = idiomaTextos.NegocioNombre,
    };
    var clases = new
    {
        Profile = string.Format("{0}Profile", Model.Nombre),
        Entidad = Model.Nombre,
    };
}
using AutoMapper;

using @(Html.Raw(namespaces.Aplicacion)).@(Html.Raw(namespaces.Entidades));
using @(Html.Raw(namespaces.Aplicacion)).@(Html.Raw(namespaces.Negocio)).DTO.@(Html.Raw(Model.NombrePlural));

namespace @(Html.Raw(namespaces.Aplicacion)).@(Html.Raw(namespaces.Negocio)).Automapper
{
    public class @Html.Raw(clases.Profile) : Profile
    {
        public @(Html.Raw(clases.Profile))()
        {
            @(Html.Raw(FormatoHelper.Generic("CreateMap", string.Format("{0}{1}", idiomaTextos.Agregar, idiomaTextos.Parametros), clases.Entidad)))();
            @(Html.Raw(FormatoHelper.Generic("CreateMap", string.Format("{0}{1}", idiomaTextos.Actualizar, idiomaTextos.Parametros), clases.Entidad)))();
        @if (Model.Especificaciones.BajaTipoId == BajaTipos.LOGICA)
        {
            <text>@(Html.Raw(FormatoHelper.Generic("CreateMap", string.Format("{0}{1}", idiomaTextos.MarcarComoBorrado, idiomaTextos.Parametros), clases.Entidad)))();
            @(Html.Raw(FormatoHelper.Generic("CreateMap", string.Format("{0}{1}", idiomaTextos.DesmarcarComoBorrado, idiomaTextos.Parametros), clases.Entidad)))();</text>
        }
        else if (Model.Especificaciones.BajaTipoId == BajaTipos.FISICA)
        {
            <text>@(Html.Raw(FormatoHelper.Generic("CreateMap", string.Format("{0}{1}", idiomaTextos.Eliminar, idiomaTextos.Parametros), clases.Entidad)))();</text>
        }
        }
    }
}
